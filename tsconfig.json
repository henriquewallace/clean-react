{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "jsx": "preserve",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }